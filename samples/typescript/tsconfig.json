{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    // https://blog.mariusschulz.com/2017/06/09/typescript-2-3-the-strict-compiler-option
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"]
  }
}
